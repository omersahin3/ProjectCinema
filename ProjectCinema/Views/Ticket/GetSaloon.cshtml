@model List<ProjectCinema.Data.Models.Chair>
@{
    ViewData["Title"] = "GetSaloon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

@{
    int satir = ViewBag.c1;
    int sutun = ViewBag.c2;
    int chair = ViewBag.v1;
    int showchair = ViewBag.v2;
    int sayac = 0;
    <div class="response"></div>
    @for (int i = 0; i < satir; i++)
    {
        @for (int j = 1; j <= sutun; j++)
        {
            <button type="submit" name="mine" value=@chair>
                @if (Model[sayac].ChairID == showchair)
                {
                    <img src="~/Images/show.png" />
                }
                else if (Model[sayac].Status == true)
                {
                    <img src="~/Images/on.png" />
                }
                else
                {
                    <img src="~/Images/off.png" />
                }
            </button>
            chair++;
            sayac++;
        }
        <br />
    }
    <br />
    <h1 style="color:black">the chair you purchased is yellow colour.</h1>
    <br />
}

